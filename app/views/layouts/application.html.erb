<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		  <%= stylesheet_link_tag    "application", media: "all" %>
		  <%= javascript_include_tag "application" %>
		  <%= csrf_meta_tags %>
		  <%= favicon_link_tag 'favicon.ico' %>
		  <%= favicon_link_tag 'iphone-dark-l.png', :rel => 'apple-touch-icon', :type => 'image/png' %>
		  <%= render 'layouts/shim' %>
	</head>
	<body <%= label_pageid(yield(:title)) %>>
		<%= render 'layouts/header' unless skip_header?(yield(:title)) %>
		<div class="container-fluid">
			<%= render 'shared/flash_messages' unless skip_header?(yield(:title)) %>
			<%= yield %>
		</div>
		<%= render 'layouts/footer' unless skip_footer?(yield(:title)) %>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
