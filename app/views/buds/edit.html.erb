<% provide(:title, 'Edit #{bud.name}') %>

<h1>Bud Configuration</h1>

<div class="row">
    <div class="span6 offset3">
      	<%= form_for(@bud) do |f| %>
        	<%= render 'shared/error_messages', object: @bud %>
            <%= f.label :uid %>
            <%= f.text_field :uid %>

        	<%= f.label :name %>
        	<%= f.text_field :name %>

        	<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      	<% end %>
    </div>
</div>