<% provide(:title, @bud.uid) %>

<h1>Bud uid : <%= @bud.uid %></h1>

<div class="row">
  	<aside class="span6 offset3">
      <h2>Panel Label: <%= @bud.name %></h2>
        hardware: <%= @bud.hardware_v %><br>
        firmware: <%= @bud.firmware_v %><br>
        active: <%= @bud.active %><br>
        heart beat: <%= time_ago_in_words(@bud.updated_at) %>

        <h2>Panel Details</h2>
        <div id="leftcolumn">
          <h3>spi0:id</h3>
            <% if @bud.circuits.any? %>
              <%= render @bud.circuits.where("channel < ?", 32).where(active: true) %>
            <% end %>
        </div>
        <div id="rightcolumn">
          <h3>spi1:id</h3>
            <% if @bud.circuits.any? %>
              <%= render @bud.circuits.where("channel > ?", 31).where(active: true) %>
            <% end %>
        </div>

  	</aside>
    <%= link_to "Edit", edit_bud_path, class: "btn btn-large btn-primary" %>
</div>